	 <select id="getcdSearch" parameterType="Map" resultMap="CartDetailMap">
		 SELECT CD_NO, TITLE, SINGER, MAIN_IMG, DETAIL_IMG, PRICE, STOCK, RECOMMEND_COUNT, WRITED_AT
		    FROM CD
		   <where>
		   		<if test="search != '' and searchText1 != ''">
		   			${search} LIKE CONCAT('%', UPPER(#{searchText1}) , '%') OR ${search} LIKE CONCAT('%', LOWER(#{searchText1}), '%')
		   		</if>
		   </where> 
		    ORDER BY CD_NO ASC
		    LIMIT #{begin}, #{recordPerPage}
	</select>
	
	  -->
	
 	
	

	
	
	 
	
	
	
	
	

</mapper>