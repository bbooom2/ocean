<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace는 @Mapper를 지정한다. -->
<mapper namespace="com.gdu.ocean.mapper.ChatRoomMapper">
	<select id="getAllChatRoom" parameterType="Map" resultType="ChatRoomDTO">
		SELECT ROOM_ID, NAME
		  FROM CHAT_ROOM
	</select>
	<select id="findChatRoom" parameterType="String" resultType="ChatRoomDTO">
		SELECT ROOM_ID, NAME
		  FROM CHAT_ROOM
		 WHERE ROOM_ID = #{roomId}
	</select>
	<insert id="createChatRoom" parameterType="ChatRoomDTO">
		INSERT INTO CHAT_ROOM(
			ROOM_ID
		  , NAME
		) VALUES (
			#{roomId}
		  , #{name}
		)
	</insert>
</mapper>